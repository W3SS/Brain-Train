<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.salvador_nico.braintrain.MainActivity">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/displayContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/display1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/display2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/display1"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/display3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/grey"
                app:layout_constraintTop_toBottomOf="@id/display1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/display4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/grey"
                app:layout_constraintTop_toBottomOf="@id/display2"
                app:layout_constraintLeft_toRightOf="@id/display3"
                android:layout_margin="10dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/inputContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/displayContainer"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/btnBlue"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/btnGreen"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnBlue"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/btnYellow"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/yellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnGreen"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/btnRed"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnYellow"
                android:layout_margin="10dp"
                />

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
